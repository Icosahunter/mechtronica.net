<!DOCTYPE html>

<html lang="en">
  <head>
    <!-- Meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon and title -->
    <link rel="icon" href="{{site.url}}/images/icon.svg">
    <title> {{ title }} </title>

    <!-- Halfmoon CSS -->
    <link href="{{site.url}}/halfmoonui/css/halfmoon-variables.min.css" rel="stylesheet" />

    <!-- Custom Halfmoon Variables -->
    <link href="{{site.url}}/custom-variables.css" rel="stylesheet" />

    <!-- Google Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  </head>
  <body class="with-custom-webkit-scrollbars with-custom-css-scrollbars" data-dm-shortcut-enabled="true" data-sidebar-shortcut-enabled="true" data-set-preferred-theme-onload="true">
    <!-- Modals go here -->
    <!-- Reference: https://www.gethalfmoon.com/docs/modal -->

    <!-- Page wrapper start -->
    <div class="page-wrapper with-sidebar" data-sidebar-type="full-height">
      
      <!-- Sticky alerts (toasts), empty container -->
      <!-- Reference: https://www.gethalfmoon.com/docs/sticky-alerts-toasts -->
      <div class="sticky-alerts"></div>

      <!-- Sidebar start -->
      <div class="sidebar">
        <div class="sidebar-menu">

          <!-- Sidebar brand -->
          <a href="#" class="sidebar-brand">
            <img src="{{site.url}}/images/logo.svg" alt="Mechtronica">
          </a>
          <br/>

          <!-- Sidebar links and titles -->
          <a href="{{site.url}}/home" class="sidebar-link {{ "active" if page.url == "home/" }}">
            Home
          </a>
          <a href="{{site.url}}/character-sheets/downloads" class="sidebar-link {{ "active" if page.url == "character-sheets/downloads" }}">
            Character Sheets
          </a>
          <a href="{{site.url}}/mechdb/viewer" class="sidebar-link {{ "active" if page.url == "mechdb/viewer/" }}">
            MechDB Viewer
          </a>
          <br/>

          <details class="collapse-panel"> <!-- w-400 = width: 40rem (400px), mw-full = max-width: 100% -->
            <summary class="collapse-header">
              Rules
            </summary>
            <div class="collapse-content"{{ " open" if tags and "rules_page" in tags }}>
              {% for section_name, section in navlinks %}
                  <h6 class="sidebar-title">{{ section_name }}</h6>
                {% for link_name, link in section %}
                  <a href="{{site.url}}{{link}}" class="sidebar-link ml-10{{ " active" if page.url == link }}">{{ link_name }}</a>
                {% endfor %}
              {% endfor %}
            </div>
          </details>

        </div>
      </div>
      <!-- Sidebar end -->

      <!-- Content wrapper start -->
      <div class="content-wrapper">
        <button class="btn btn-square m-10" type="button" onclick="halfmoon.toggleSidebar()" style="padding-top: 0.4rem;">
          <span class="material-symbols-outlined">menu</span>
          <span class="sr-only">Toggle sidebar</span> <!-- sr-only = show only on screen readers -->
        </button>
        <div class="content">
          {{ content | safe }}
        </div>
      </div>
      <!-- Content wrapper end -->

    </div>
    <script src="{{site.url}}/halfmoonui/js/halfmoon.min.js"></script>
  </body>
</html>